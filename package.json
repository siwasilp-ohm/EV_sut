{
  "name": "ev-solar-charging-system",
  "version": "1.0.0",
  "description": "Complete EV Solar Charging Management System with OCPP 1.6 and Inverter Integration",
  "main": "server/app.js",
  "scripts": {
    "start": "node server/app.js",
    "dev": "nodemon server/app.js",
    "client": "cd client && npm start",
    "admin": "cd admin && npm start",
    "build": "npm run build:client && npm run build:admin",
    "build:client": "cd client && npm run build",
    "build:admin": "cd admin && npm run build",
    "setup": "npm install && cd client && npm install && cd ../admin && npm install"
  },
  "dependencies": {
    "express": "^4.18.2",
    "mysql2": "^3.6.0",
    "sequelize": "^6.32.1",
    "socket.io": "^4.7.2",
    "ws": "^8.13.0",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "dotenv": "^16.3.1",
    "node-cron": "^3.0.2",
    "axios": "^1.5.0",
    "modbus-serial": "^8.0.8",
    "qrcode": "^1.5.3",
    "moment": "^2.29.4",
    "morgan": "^1.10.0",
    "express-rate-limit": "^6.10.0",
    "express-validator": "^7.0.1",
    "winston": "^3.10.0",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "jest": "^29.6.2",
    "supertest": "^6.3.3"
  },
  "keywords": [
    "ev-charging",
    "solar",
    "ocpp",
    "inverter",
    "charging-station",
    "thailand"
  ],
  "author": "EV Solar Team",
  "license": "MIT"
}
